<section id="editPage">
    <form id='editForm' action="/toys/{{_id}}/edit" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="Title..." value="{{title}}">
        <label for="charity">For Charity:</label>
        <input type="text" id="charity" name="charity" placeholder="For Charity..." value="{{charity}}">
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" placeholder="Price..." value="{{price}}.00">
        <label for="description">Description:</label>
        <input type="text" id="description" name="" placeholder="Description..."
            value="{{description}}">
        <label for="category">Category:</label>
        <input type="text" id="description" name="" placeholder="Category..." value="{{category}}">
        <input type="submit" class="edit" value="Edit Toy Offer">
    </form>
</section>