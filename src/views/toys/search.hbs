<section class="search">
    <h1>Search</h1>

    <form class="search-form" action="#" method="GET">
        <input type="text" class="search-title" name="toyTitle" placeholder="Search Title...">
        <input type="text" class="search-charity" name="toyCharity" placeholder="Search Charity...">
        <button type="submit" class="btn-search">Search</button>
    </form>

    {{#if toy}}
    <div class="search-result">
        <div class="search-list">
            {{#each toy}}
                {{> toys-card}}
            {{/each}}
        </div>
    </div>
    {{else}}
    <div class="no-match">
        <p>No match was found!</p>
    </div>
    {{/if}}
</section>